<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경색 -->
    <solid android:color="@android:color/white" />
    <!-- 테두리 -->
    <stroke
        android:width="1dp"
        android:color="#BDBDBD" />
    <!-- 둥근 모서리 -->
    <corners android:radius="12dp" />
    <!-- 안쪽 여백 -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>